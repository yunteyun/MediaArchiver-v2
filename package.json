{
    "name": "media-archiver-v2",
    "private": true,
  "version": "1.1.3d5",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:electron": "electron-builder",
        "lint": "eslint .",
        "preview": "vite preview"
    },
    "dependencies": {
        "@tanstack/react-virtual": "^3.13.18",
        "7zip-bin": "^5.2.0",
        "better-sqlite3": "^12.6.2",
        "check-disk-space": "^3.4.0",
        "electron-log": "^5.4.3",
        "ffmpeg-static": "^5.3.0",
        "ffprobe-static": "^3.1.0",
        "fluent-ffmpeg": "^2.1.3",
        "lucide-react": "^0.468.0",
        "p-limit": "^7.3.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "recharts": "^3.7.0",
        "sharp": "^0.34.5",
        "sonner": "^2.0.7",
        "uuid": "^13.0.0",
        "zustand": "^5.0.0"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.3",
        "@eslint/js": "^9.17.0",
        "@types/better-sqlite3": "^7.6.13",
        "@types/fluent-ffmpeg": "^2.1.28",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@types/uuid": "^10.0.0",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "electron": "^33.2.1",
        "electron-builder": "^26.7.0",
        "electron-squirrel-startup": "^1.0.1",
        "eslint": "^9.17.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "globals": "^15.14.0",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.17",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.18.2",
        "vite": "^6.0.5",
        "vite-plugin-electron": "^0.29.0"
    },
    "build": {
        "appId": "com.yunteyun.mediaarchiver",
        "productName": "MediaArchiver v2",
        "directories": {
            "output": "release"
        },
        "asarUnpack": [
            "node_modules/7zip-bin/**/*",
            "node_modules/better-sqlite3/**/*",
            "node_modules/ffmpeg-static/**/*",
            "node_modules/ffprobe-static/**/*",
            "node_modules/sharp/**/*"
        ],
        "afterPack": "./electron/scripts/afterPack.cjs",
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "extraFiles": [
            {
                "from": "update.bat",
                "to": "update.bat"
            }
        ],
        "win": {
            "icon": "build/icons/release-icon.png",
            "target": "zip"
        }
    }
}

